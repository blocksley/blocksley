/*
* Blocksley
*/

@import './variables'
@import './quasar.variables'

*
  box-sizing: border-box
  text-size-adjust: 100%
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
  -webkit-touch-callout: none
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-rendering: optimizeLegibility
  &:focus
    outline: none
*::before,
*::after
  box-sizing: border-box
html
  font-family: -apple-system, BlinkMacSystemFont, San Francisco, Roboto, Segoe UI, Helvetica Neue, sans-serif
  font-size: 18px
  color: $color-black
  line-height: 1.5
body
  margin: 0
a
  color: inherit

/*
h1,
h2,
h3,
p,
ul,
ol,
pre,
blockquote
  margin: 1rem 0
  &:first-child
    margin-top: 0
  &:last-child
    margin-bottom: 0

*/
img
  margin-bottom: 1em

h1,
h2,
h3
  line-height: 1.3

.block-left
  float: left
  display: block
  padding: 0 20px 20px 0

.block-right
  float: right
  display: block
  position: relative;
  z-index: 99

@import './editor'
@import './viewer'
@import './menubar'
@import './menutab'
@import './menufloat'