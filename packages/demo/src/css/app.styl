// app global css

.app-toolbar {
    background-color: #222222;
}

.drawer {
  background-color: #36454F;
  color: white;
}

.q-item.q-router-link--active, .q-item--active {
    color: white;
    background-color: gray;
}

h1, h2, h3 {
  text-rendering: optimizeLegibility;
  font-weight: bold;

}
h1 {
  font-size: 2rem;
}

h2 {
  font-size: 1.75rem;
}

h3 {
  font-size: 1.5rem;
}
h4 { font-size: 1.12em; }
h5 { font-size: .83em; }
h6 { font-size: .75em; }

.card-title {
  color: black;
  font-size: 110%;
  font-weight: 400;
  padding: 24px 16px 8px 16px;
}

.fields > * {
  margin-bottom: 16px;
}
.fields > *:last-child {
  margin-bottom: -16px;
}

a {
  text-decoration: none;
}
a, a:visited, a:hover, a:active {
  color: inherit;
}
a:hover {
  // text-decoration: underline;
}

.drawer {
  background-color: #36454F;
  color: white;
}
.excerpt {
    height: 2em; // that's one line, 2em for 2 lines, etc...
    line-height: 1em; // the height of one text line
    overflow: hidden;
}

.frame {
  margin: 0 auto;
  max-width: 1080px;  
}
.item-column
{
  margin: 0 auto;
  max-width: 600px;
  background-color: white;
}
.card-column
{
  margin: 0 auto;
  max-width: 600px;
}
.card-column > * {
  margin-top: 8px;
}

.card-column-menu
{
  margin: 0 auto;
  max-width: 600px;
  margin-bottom: 8px;
}

.paper {
  background-color: white;
}

.postcard {
  background-color: white;
}

.post {
  background-color: white;
}

@media(min-width: 768px) {
  .post {
    margin-bottom: 24px;
    margin: 16px;
  }
}
