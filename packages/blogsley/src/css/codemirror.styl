.CodeMirror {
  min-height: 100vh !important;
  line-height: 1.2em;
  font-size: 1.1em;
  padding-top: 1em;
}

.cm-s-miakai.CodeMirror { background: #111111; color: #f8f8f2; }
.cm-s-miakai div.CodeMirror-selected { background: #49483E; }
.cm-s-miakai .CodeMirror-line::selection, .cm-s-miakai .CodeMirror-line > span::selection, .cm-s-miakai .CodeMirror-line > span > span::selection { background: rgba(73, 72, 62, .99); }
.cm-s-miakai .CodeMirror-line::-moz-selection, .cm-s-miakai .CodeMirror-line > span::-moz-selection, .cm-s-miakai .CodeMirror-line > span > span::-moz-selection { background: rgba(73, 72, 62, .99); }
.cm-s-miakai .CodeMirror-gutters { background: #111111; border-right: 0px; }
.cm-s-miakai .CodeMirror-guttermarker { color: white; }
.cm-s-miakai .CodeMirror-guttermarker-subtle { color: #d0d0d0; }
.cm-s-miakai .CodeMirror-linenumber {
  color: #333333; 
  padding-right: 1em;
}
.cm-s-miakai .CodeMirror-cursor { border-left: 1px solid #f8f8f0; }

.cm-s-miakai span.cm-comment { color: #75715e; }
.cm-s-miakai span.cm-atom { color: #ae81ff; }
.cm-s-miakai span.cm-number { color: #ae81ff; }

.cm-s-miakai span.cm-comment.cm-attribute { color: #97b757; }
.cm-s-miakai span.cm-comment.cm-def { color: #bc9262; }
.cm-s-miakai span.cm-comment.cm-tag { color: #bc6283; }
.cm-s-miakai span.cm-comment.cm-type { color: #5998a6; }

.cm-s-miakai span.cm-property, .cm-s-miakai span.cm-attribute { color: #a6e22e; }
.cm-s-miakai span.cm-keyword { color: #f92672; }
.cm-s-miakai span.cm-builtin { color: #66d9ef; }
.cm-s-miakai span.cm-string { color: #e6db74; }

.cm-s-miakai span.cm-variable { color: #f8f8f2; }
.cm-s-miakai span.cm-variable-2 { color: #9effff; }
.cm-s-miakai span.cm-variable-3, .cm-s-miakai span.cm-type { color: #66d9ef; }
.cm-s-miakai span.cm-def { color: #fd971f; }
.cm-s-miakai span.cm-bracket { color: #f8f8f2; }
.cm-s-miakai span.cm-tag { color: #f92672; }
.cm-s-miakai span.cm-header { color: #ae81ff; }
.cm-s-miakai span.cm-link { color: #ae81ff; }
.cm-s-miakai span.cm-error { background: #f92672; color: #f8f8f0; }

.cm-s-miakai .CodeMirror-activeline-background { background: #373831; }
.cm-s-miakai .CodeMirror-matchingbracket {
  text-decoration: underline;
  color: white !important;
}